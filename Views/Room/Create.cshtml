@model asp_projekt.Models.Room

@{
    ViewData["Title"] = "Lägg till rum";
}

    <div class="container">
        <h2>Lägg till rum</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-field">
                        <label asp-for="RoomName" class="control-label"></label>
                        <input asp-for="RoomName" class="form-control" />
                        <span asp-validation-for="RoomName" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <label asp-for="NoOfRooms" class="control-label"></label>
                        <input asp-for="NoOfRooms" class="form-control" />
                        <span asp-validation-for="NoOfRooms" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <label asp-for="PricePerNight" class="control-label"></label>
                        <input asp-for="PricePerNight" class="form-control" />
                        <span asp-validation-for="PricePerNight" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <label asp-for="MaxNoOfPersons" class="control-label"></label>
                        <input asp-for="MaxNoOfPersons" class="form-control" />
                        <span asp-validation-for="MaxNoOfPersons" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <label asp-for="SquareMeter" class="control-label"></label>
                        <input asp-for="SquareMeter" class="form-control" />
                        <span asp-validation-for="SquareMeter" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <label asp-for="BedWidth" class="control-label"></label>
                        <input asp-for="BedWidth" class="form-control" />
                        <span asp-validation-for="BedWidth" class="text-danger"></span>
                    </div>
                    <!--
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="View" /> @Html.DisplayNameFor(model => model.View)
        </label>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="BreakFast" /> @Html.DisplayNameFor(model => model.BreakFast)
        </label>
    </div>
        -->
                    <div class="input-field center">
                        <p>
                            <label>
                                <input type="checkbox" asp-for="View">
                                <span>@Html.DisplayNameFor(model => model.View)</span>
                            </label>
                        </p>
                    </div>
                    <div class="input-field center">
                        <p>
                            <label>
                                <input type="checkbox" asp-for="BreakFast">
                                <span>@Html.DisplayNameFor(model => model.BreakFast)</span>
                            </label>
                        </p>
                    </div>
                    <div class="input-field">
                        <input type="submit" value="Lägg till" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Tillbaka till alla rum</a>
        </div>

    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
