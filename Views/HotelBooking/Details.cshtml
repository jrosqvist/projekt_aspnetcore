        <h2>Bokningsinformation</h2>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CheckIn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CheckIn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CheckOut)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CheckOut)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NoOfPersons)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NoOfPersons)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Room)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Room.RoomName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-10">
