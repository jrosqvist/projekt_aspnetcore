@model asp_projekt.Models.HotelBooking

@{
    ViewData["Title"] = "Delete";
}

    <div class="container">

        <h2>Radera bokning</h2>

        <h3>Är du säker på att du vill radera bokningen?</h3>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CheckIn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CheckIn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CheckOut)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CheckOut)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NoOfPersons)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NoOfPersons)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Room)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Room.RoomName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ExtraInformation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ExtraInformation)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Radera" class="btn btn-danger" /> |
                <a asp-action="Index">Tillbaka</a>
            </form>
        </div>

    </div>
